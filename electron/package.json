{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "novabill-pos",
  "version": "1.0.0",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.novabill.pos",
    "productName": "NovaBill POS",
    "files": [
      "main.js",
      "package.json",
      {
        "from": "../frontend/build/",
        "to": "build/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1"
  },
  "devDependencies": {
    "electron": "^23.1.3",
    "electron-builder": "^23.6.0"
  }
}
